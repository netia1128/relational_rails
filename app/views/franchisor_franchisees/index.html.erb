<div style="text-align:right"><%= link_to "Franchisors Index", "/franchisors"%></div>
<br>
<div style="text-align:right"><%= link_to "Franchisees Index", "/franchisees"%></div>

<h1><%= @franchisor.name %></h1>

<div><%= link_to "Create Franchisee", "/franchisors/#{@franchisor.id}/franchisees/new" %></div>
<br>
<div> <%= link_to "Sort Alphabetical", "/franchisors/#{@franchisor.id}/franchisees?sort_alphabetical=true" %></div>
<br>
<div>
  <%= form_with url: "/franchisors/#{@franchisor.id}/franchisees", method: :get, local: true do |form| %>
    <%= form.label :annual_sales_filter, "Filter by annual sales higher than:" %>
    <%= form.number_field :annual_sales_filter %>
    <%= form.submit "Filter" %>
  <% end %>
</div>
<br>
<p>   Name                      City                      State                       Independent                     Annual Sales                      Initial Fee                     Percent Fee to HQ           Date Created:                                       Date Updated: </p>
<% @franchisees.each do |franchisee| %>
  <p> <%= franchisee.name %>    <%= franchisee.city %>    <%= franchisee.state %>     <%= franchisee.independent %>   <%= franchisee.annual_sales %>    <%= franchisee.initial_fee %>   <%= franchisee.pct_fee %>   <%= franchisee.created_at.strftime('%Y-%m-%d') %>   <%= franchisee.updated_at.strftime('%Y-%m-%d') %>
  <%= link_to "Update #{franchisee.name}", "/franchisees/#{franchisee.id}/edit", method: :get, id: "update_#{franchisee.id}" %>
  <%= link_to "Delete #{franchisee.name}", "/franchisees/#{franchisee.id}", method: :delete, id: "delete_#{franchisee.id}" %></p>
<% end %>
