<h1>Denver's Marijuana Licenses</h1>
<br>
<table style='width:100%'>
  <tr>
    <th>License Number</th>
    <th>Business Name</th>
    <th>Facility Address</th>
    <th>License Type</th>
    <th>License Status</th>
    <th>License Expiration</th>
    <th>More Details</th>
    <th>Delete License</th>
  </tr>
    <% @b1permits.each do |license| %>
      <tr>
      <td><%= license.id %></td>
      <td><%= license.b1_special_text %></td>
      <td><%= B3Facility.find(license.b3_facility_id).full_address %></td>
      <td><%= license.b1_per_sub_type %></td>
      <td><%= license.b1_appl_status %></td>
      <td><%= license.b1_expiration.strftime("%m/%d/%Y") %></td>
      <td><a href="/licenses/<%= license.id %>">See More Info</a>
      /
      <a href="/licenses/<%= license.id %>/edit">Edit Info </a></td>
      <td><%= link_to "Delete License", "/licenses/#{license.id}", method: :delete %>
      </tr>
      <% end %>
</table>

<h3>Filter Preference:</h3>
<%= form_with url: "/licenses", method: :get, local: true do |form| %>
  <%= form.label :exact_name_filter, 'Filter by exact business name:' %>
  <%= form.text_field :exact_name_filter %>
  <%= form.submit 'Filter' %><br><br>
  <%= form.label :partial_name_filter, 'Filter by partial business name:' %>
  <%= form.text_field :partial_name_filter %>
  <%= form.submit 'Filter' %>
<% end %>


